<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="12dp">

        <ImageView
            android:id="@+id/iv_cart_drink_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:contentDescription="@string/content_description_drink_image"
            android:scaleType="centerCrop"
            android:src="@drawable/americanoimg" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_cart_drink_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Americano"
                android:textColor="@color/colorTextPrimary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_cart_drink_options"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medium | Double Shot | Cold | Normal Ice"
                android:textColor="@color/colorTextSecondary"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_cart_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$2.50"
                android:textColor="@color/colorTextPrimary"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical">

                <ImageButton
                    android:id="@+id/btn_cart_quantity_minus"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:background="@drawable/ellipse_10"
                    android:contentDescription="@string/content_description_minus_button"
                    android:src="@drawable/minus"
                    app:tint="@null" />

                <TextView
                    android:id="@+id/tv_cart_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp"
                    android:text="1"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/btn_cart_quantity_plus"
                    android:layout_height="28dp"
                    android:layout_width="28dp"
                    android:background="@drawable/ellipse_10"
                    android:contentDescription="@string/content_description_plus_button"
                    android:src="@drawable/plus"
                    app:tint="@null" />

                <ImageButton
                    android:id="@+id/btn_cart_remove_item"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginStart="12dp"
                    android:background="@drawable/rectangle_2588"
                    android:contentDescription="@string/content_description_remove_item"
                    android:src="@drawable/delete"
                    app:tint="@color/red"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
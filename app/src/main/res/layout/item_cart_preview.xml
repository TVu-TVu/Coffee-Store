<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/iv_cart_item_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:src="@drawable/americanoimg"
        android:layout_marginEnd="8dp"
        android:contentDescription="Drink Image" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_cart_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Americano (L, Hot, Double Shot, Normal Ice)"
            android:textColor="@color/colorTextPrimary"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_cart_item_price_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$3.50 x 2"
            android:textColor="@color/colorTextSecondary"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_cart_item_total_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$7.00"
        android:textColor="@color/colorBackgroundDark"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginStart="8dp" />

</LinearLayout>